<div class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">
          <a href="{{= it.link}}" target="_blank">
            {{= it.title}}
          </a>
        </h4>
      </div>

      <div class="modal-body">
        <div class="media">
          <div class="modal-img-container"><img src="{{= it.media.m}}" class="enlarged media-object img-rounded" id="target"></div>
        </div>
      </div>

      <div class="modal-footer">
        {{? it.tags}}
          <p><label class="pull-left" style="margin-right: 15px;">Tags:</label> {{~ it.tags :value :index}}<span class="label label-info">{{= value}}</span>{{~}}</p>
        {{?}}
      </div>
  </div>
</div>